        </Grid.RowDefinitions>

        <!--row 4-->
        <Label x:Name="UID"  HorizontalContentAlignment="Center" HorizontalAlignment="Center" Content="Licence created successfully" Height="70"   FontSize="48" Grid.Row="4"/>

    </Grid>
